{
    "$schema": "./probe-rs-launch.schema.json",
    // The format of this file is specified in https://probe.rs/docs/tools/debugger/#start-a-debug-session-with-minimum-configuration
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "Build firmware (rp2040)",
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "rp2040-project",
            "cwd": "${workspaceFolder}",
            "chip": "rp2040",
            // RP2040 doesn't support connectUnderReset
            "connectUnderReset": false,
            "speed": 4000,
            "runtimeExecutable": "probe-rs",
            "runtimeArgs": [
                "dap-server"
            ],
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": false
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "${workspaceFolder}/target/thumbv6m-none-eabi/debug/template",
                    "rttEnabled": true,
                    "runToEntryPoint": "main",
                    "skipFiles": [
                        "**/core/**",
                        "**/cortex-m/**"
                    ]
                    // Uncomment this if you've downloaded the SVD from
                    // https://github.com/raspberrypi/pico-sdk/raw/1.3.1/src/rp2040/hardware_regs/rp2040.svd
                    // and placed it in the .vscode directory
                    // "svdFile": "./.vscode/rp2040.svd",
                }
            ],
            "consoleLogLevel": "Info", //Error, Warn, Info, Debug
            "wireProtocol": "Swd"
        },
        {
            "preLaunchTask": "Build firmware (rp2040, no break)",
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "rp2040-project (no break)",
            "cwd": "${workspaceFolder}",
            "chip": "rp2040",
            // RP2040 doesn't support connectUnderReset
            "connectUnderReset": false,
            "speed": 4000,
            "runtimeExecutable": "probe-rs",
            "runtimeArgs": [
                "dap-server"
            ],
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": false
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "${workspaceFolder}/target/thumbv6m-none-eabi/debug/template",
                    "rttEnabled": true,
                    "runToEntryPoint": "main",
                    "skipFiles": [
                        "**/core/**",
                        "**/cortex-m/**"
                    ]
                    // Uncomment this if you've downloaded the SVD from
                    // https://github.com/raspberrypi/pico-sdk/raw/1.3.1/src/rp2040/hardware_regs/rp2040.svd
                    // and placed it in the .vscode directory
                    // "svdFile": "./.vscode/rp2040.svd",
                }
            ],
            "consoleLogLevel": "Info", //Error, Warn, Info, Debug
            "wireProtocol": "Swd"
        },
        {
            "name": "Flash with probe (no debugger)",
            "type": "node-terminal",
            "request": "launch",
            // Runs the flash task and then exits immediately; select this config and hit F5.
            "preLaunchTask": "Flash firmware (probe)",
            // No debugger attach; just run a short command in the terminal.
            "command": "echo 'Flashed via probe-rs; no debugger session started.'",
            "cwd": "${workspaceFolder}"
        }
    ]
}
